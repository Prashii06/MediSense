# Copy this file to .env and fill in your credentials (DO NOT COMMIT .env)

# Base URL for watsonx.ai or your IBM deployment (no trailing slash preferred)
WATSON_URL=
# API key (or other secret) for watsonx access
WATSON_APIKEY=
# Deployment ID for the model you want to call
WATSON_DEPLOYMENT_ID=

# Optional: set to 'iam' if you need to exchange API key for an IAM token
# WATSON_AUTH_FLOW=apikey|iam
# Optional: override the full prediction endpoint URL (useful for text/chat endpoints)
WATSON_PREDICTION_URL=

# Optional: set to 'iam' if you need to exchange API key for an IAM token
WATSON_AUTH_FLOW=apikey|iam

# OCR / persistence options
# Set to 'true' to persist original uploaded files under `uploads/originals` (use with caution for PHI)
PERSIST_ORIGINALS=false
# Language for Tesseract OCR (default: eng)
OCR_LANG=eng

# IBM Cloud Object Storage (optional)
# Set these to enable automatic upload of saved reports to a COS bucket
# Example endpoint: s3.us-south.cloud-object-storage.appdomain.cloud
COS_ENDPOINT=
COS_API_KEY_ID=
COS_RESOURCE_INSTANCE_ID=
COS_BUCKET=
COS_REGION=
